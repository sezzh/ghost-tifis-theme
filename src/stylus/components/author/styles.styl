.sezzh-author-detail
  width: 100%
  &__wrapper-bio
    width: 100%
    &__img
      border-radius: 50%
      display: block
      margin: 0 auto
      width: 50%
    &__bio
      width: 100%
      &__name
        color: $gray-26
        font-size: rem-calc(22)
        margin: 1rem 0
        text-align: center
        width: 100%
      &__story
        color: $gray-51
        line-height: rem-calc(23)
        width: 100%
  &__wrapper-details
    width: 100%
    &__web
      margin-bottom: 1rem
      width: 100%
      a
        display: block
        text-align: center
      gray-link()
    &__location
      color: $gray-51
      margin-bottom: 1rem
      text-align: center
    &__post
      color: $gray-51
      margin-bottom: 1rem
      text-align: center
  &__wrapper-network
    width: 100%
    &__btn
      color: $gray-102
      display: block
      font-size: rem-calc(24)
      text-align: center
      text-decoration: none
      width: 100%
