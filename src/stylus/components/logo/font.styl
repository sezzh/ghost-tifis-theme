@import './variables'

@font-face
  font-family 'sezzhlogo'
  src url(sezzhlogo-font-path + '/sezzhlogo.eot?swtkac')
  src url(sezzhlogo-font-path + '/sezzhlogo.eot?swtkac#iefix') format('embedded-opentype'), url(sezzhlogo-font-path + '/sezzhlogo.ttf?swtkac') format('truetype'), url(sezzhlogo-font-path + '/sezzhlogo.woff?swtkac') format('woff'), url(sezzhlogo-font-path + '/sezzhlogo.svg?swtkac#sezzhlogo') format('svg')
  font-weight normal
  font-style normal

[class^="logo-"], [class*=" logo-"]
  font-family 'sezzhlogo' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.logo-sezzh
  &:before
    content logo-sezzh
