.sezzh-nav
  background-color: $gray-242
  display: flex
  flex-flow: column
  flex-wrap: wrap
  font-family: $font-nav
  opacity: 1
  padding: 0 1rem
  transform: translate3d(0%, 0, 0)
  transition-duration: .4s
  transition-property: transform, opacity
  width: calc(100% - 2rem)
  z-index: 10
  &--closed
    opacity: 0
    transform: translate3d(-100%, 0, 0)
  &--fixed
    bottom: 0
    left: 0
    position: fixed
    right: 0
    top: 0
  &__item
    color: $primary-dark-color
    display: block
    font-size: rem-calc(24)
    margin-bottom: rem-calc(12)
    text-decoration: none
    &--selected
      color: $primary-light-color

.sezzh-post-nav
  color: $gray-77
  display: block
  font-family: $font-main
  text-decoration: none
  width: 100%
  &--older
    text-align: right
  &--newer
    text-align: left

.sezzh-up-btn
  border-radius: 50%
  bottom: 0
  display: block
  height: rem-calc(44)
  margin-bottom: .5rem
  margin-right: .5rem
  opacity: 0
  position: fixed
  right: 0
  text-align: center
  text-decoration: none
  transition-duration: .5s
  transition-property: opacity
  width: rem-calc(44)
  &--visible
    opacity: .7
  &__icon
    color: $gray-188
    font-size: rem-calc(44)
